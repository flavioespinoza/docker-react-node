{
  "name": "docker-react-node",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "start-dev": "nf --procfile Procfile --port 8080 start",
    "start-prod": "nf start",
		"poststart": "yarn run prod",
		"docker:build": "yarn run build && docker build -f Dockerfile.release --tag=flavioespinoza/docker-react-node:latest .",
		"docker:push": "docker push flavioespinoza/docker-react-node:latest",
		"docker:all": "yarn docker:build && yarn docker:push"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "body-parser": "^1.17.1",
    "bulma": "^0.4.1",
    "connect-mongo": "^1.3.2",
    "connect-redis": "^3.3.0",
    "dotenv": "^8.1.0",
    "express": "^4.15.2",
    "express-pino-logger": "^2.0.0",
    "express-session": "^1.15.2",
    "foreman": "^2.0.0",
    "jsonwebtoken": "^8.5.1",
    "kcors": "^2.2.2",
    "koa": "^2.8.1",
    "koa-bodyparser": "^4.2.1",
    "koa-combine-routers": "^4.0.2",
    "koa-logger": "^3.2.1",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.15",
    "marked": "^0.3.6",
    "mongoose": "^4.9.8",
    "morgan": "^1.8.1",
    "nodemon": "^1.11.0",
    "ololog": "^1.1.146",
    "pino": "^4.5.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "request": "^2.88.0",
    "typescript": "^3.5.3"
  },
  "proxy": "http://localhost:5000",
  "description": "Dockerized MERN stack with Create-React-App frontend, Node Koa backend, and MongoDB",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flavioespinoza/docker-react-node.git"
  },
  "keywords": [
    "docker",
    "react",
    "node",
    "koa",
    "create",
    "react",
    "app"
  ],
